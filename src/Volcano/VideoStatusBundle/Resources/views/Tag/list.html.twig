{% extends 'VolcanoVideoStatusBundle::layout.html.twig' %}

{% block title %}VS - Tags{% endblock %}



    {% block content %}
        <h3>Tags list</h3>
     <table class="table table-striped table-bordered ">
         <thead>
             <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Clips count</th>
                <th>Action</th>
             </tr>
         </thead>
         <tbody>
         {% for tag in tags %}
            <tr>
                <td>{{ tag.tag_id }}</td>
                <td>{{ tag.tag_name }}</td>
                <td>{{ tag.clips_count }}</td>
                <td><a href="{{ path('tag_create', {'id': tag.tag_id}) }}">Edit</a></td>
            </tr>
             {% endfor %}
         </tbody>
     </table>

    {% endblock %}